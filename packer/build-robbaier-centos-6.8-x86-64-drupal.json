{
  "min_packer_version": "0.6.0",
  "variables": {
    "build_version": "{{env `BUILD_VERSION`}}"
  },
  "builders": [
    {
      "name": "robbaier-centos-6.8-x86_64-drupal",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "http://centos.hyve.com/6.8/isos/x86_64/CentOS-6.8-x86_64-minimal.iso",
      "iso_checksum": "0ca12fe5f28c2ceed4f4084b41ff8a0b",
      "iso_checksum_type": "md5",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "disk_size": 102400,
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "90m",
      "shutdown_command": "sudo /sbin/halt -p now",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "480"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/puppet.sh",
        "scripts/lamp.sh",
        "scripts/vcs.sh",
        "scripts/ruby.sh",
        "scripts/nodejs.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh",
        "scripts/info.sh",
        "scripts/zerodisk.sh"
      ]
    }
  ],
  "post-processors": [
  {
    "type": "vagrant",
    "compression_level": 9,
    "output": "./builds/{{.BuildName}}.box"
  }
]
}